<% content_for(:title, "Is #{@show.title} on tonight?".html_safe)%>

<p id="notice"><%= notice %></p>

<h1>
  <small class="text-muted">Is</small> <%= @show.title %> <small class="text-muted">on tonight?</small>
</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Season</th>
      <th>Episode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show.episodes.each do |episode| %>
      <tr>
        <td><%= link_to episode.title, episode %></td>
        <td><%= episode.air_date.strftime("%F") %></td>
        <td><%= episode.season %></td>
        <td><%= episode.number %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Edit', edit_show_path(@show) %> |
<%= link_to 'Back', shows_path %>
